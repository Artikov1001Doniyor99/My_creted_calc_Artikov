<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThirdActivity">

    <LinearLayout
        android:layout_weight="3.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:textColor="@color/black"
            android:textSize="45sp"
            android:background="@null"
            android:enabled="false"
            android:text="0"
            android:id="@+id/edit_calc"
            android:gravity="right|center_vertical|bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_margin="2dp"
                android:id="@+id/clear"
                android:text="AC"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/plus_minus"
                android:text="+/-"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/per"
                android:text="%"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/div"
                android:text="/"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_margin="2dp"
                android:id="@+id/seven"
                android:text="7"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/eight"
                android:text="8"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/nine"
                android:text="9"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/multi"
                android:text="*"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_margin="2dp"
                android:id="@+id/four"
                android:text="4"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/five"
                android:text="5"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/six"
                android:text="6"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/minus"
                android:text="-"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_margin="2dp"
                android:id="@+id/one"
                android:text="1"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/two"
                android:text="2"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/three"
                android:text="3"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/plus_btn"
                android:text="+"
                android:textSize="25sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_margin="2dp"
                android:id="@+id/zero"
                android:text="0"
                android:textSize="25sp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/point"
                android:text="."
                android:textSize="25sp"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_margin="2dp"
                android:id="@+id/tenglik"
                android:text="="
                android:textSize="25sp"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>